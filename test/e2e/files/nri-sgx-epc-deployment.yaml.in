apiVersion: apps/v1
kind: DaemonSet
metadata:
  labels:
    app: nri-sgx-epc
  name: nri-sgx-epc
  namespace: kube-system
spec:
  selector:
    matchLabels:
      app: nri-sgx-epc
  template:
    metadata:
      labels:
        app: nri-sgx-epc
    spec:
      nodeSelector:
        kubernetes.io/os: "linux"
      containers:
        - name: nri-sgx-epc
          command:
            - nri-sgx-epc
            - --idx
            - "40"
          image: IMAGE_PLACEHOLDER
          imagePullPolicy: IfNotPresent
          resources:
            requests:
              cpu: 25m
              memory: 100Mi
          volumeMounts:
          - name: nri-sockets-vol
            mountPath: /var/run/nri
      volumes:
      - name: nri-sockets-vol
        hostPath:
          path: /var/run/nri
          type: DirectoryOrCreate
